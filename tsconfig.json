{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "CommonJS",
    "target": "ES2020",
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "strict": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"]
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "vitest.config.ts",
    "vitest.config.mts"
  ]
}
